@using GC_CoffeeLab24b.Models;
@{
    ViewBag.Title = "Item List";
}
<h2>@ViewBag.ItemName.</h2>
<h3>@ViewBag.Message</h3>
<form action="~/Home/ItemListByItemName" method="get">
    <label>
        Search by Item Name:
        <input type="text" name="ItemName" class="form-control" />
    </label>
    <input type="submit" value="Search by Item Name" class="btn btn-primary" />
</form>
