<table class="table table-bordered">
    <tr>
        <th><a href="~/Home/ItemListSorted?column=Title">ItemID</a></th>
        <th><a href="~/Home/ItemListSorted?column=Author">ItemName</a></th>
        <th><a href="~/Home/ItemListSorted?column=YearPublished">Quantity</a></th>
        <th><a href="~/Home/ItemListSorted?column=Status">Price</a></th>
        <th>Action</th>
    </tr>
    @foreach (Item i in ViewBag.Items)
    {
        <tr>
            <td>@i.ItemID</td>
            <td>@i.ItemName</td>
            <td>@i.Quantity</td>
            <td>@i.Price</td>
            <td>
                <a href="~/Home/Add?id=@i.ItemName"
                   class="btn btn-primary">Add to Bag</a>
            </td>
        </tr>
    }
</table>

